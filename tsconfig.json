{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "*.d.ts",
    "src/**/*.ts",
    "src/**/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}